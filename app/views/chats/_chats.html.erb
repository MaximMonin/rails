<div class="mb-3">
  <%= link_to new_chat_path, class: "btn btn-primary" do %>
    <%= t(".create_a_chat_room") %>
  <% end %>
</div>

<% if @chats.present? %>
  <nav class="nav flex-column">
    <% @chats.each do |chat| %>
      <%= link_to chat.name, chat_path(chat), class: "nav-link room-nav-link" %>
    <% end %>
  </nav>
  <% if @chat.present? %>
    <div class="mb-3">
      <%= link_to edit_chat_path do %>
        <%= t(".edit_chat_room") %>
      <% end %>
    </div>
  <% end %>
<% else %>
  <div class="text-muted">
    <%= t(".there_are_no_chat_rooms") %>
  </div>
<% end %>
